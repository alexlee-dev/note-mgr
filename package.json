        "typescript": "^3.9.7"
    },
    "dependencies": {
        "@types/commander": "^2.12.2",
        "@types/inquirer": "^6.5.0",
        "@types/node": "^14.0.24",
        "build": "^0.1.4",
        "chalk": "^4.1.0",
        "commander": "^6.0.0",
